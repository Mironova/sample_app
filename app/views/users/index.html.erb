<% provide(:title, t('users.all')) %>
<h1><%= t('users.all')%></h1>



<%= will_paginate %>

<div class="search_form">
	<%= form_tag users_path, method: 'get' do %>
	  <p>
	    <%= text_field_tag :search, params[:search], placeholder: "Enter the user's name..." %>
	    <%= submit_tag "Search", name: nil %>
	  </p>
	<% end %>
</div>


<ul class="users">
	<%= render @users %>
</ul>

<%= will_paginate %>

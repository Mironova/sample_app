<div class="row">
	<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
		<section>
			<%= render 'shared/micropost_form' %>
		</section>
	</aside>
	<div class="span8">
		<h3>Micropost Feed</h3>

		<div class="search_form">
			<%= form_tag root_path, method: 'get' do %>
			  <p>
			    <%= text_field_tag :search, params[:search], placeholder: "Enter the words from searching micropost..." %>
			    <%= submit_tag "Search", name: nil %>
			  </p>
			<% end %>
		</div>

		<%= render 'shared/feed' %>
	</div>
</div>